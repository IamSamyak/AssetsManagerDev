<Window x:Class="AssetsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Manager" Height="600" Width="900"
        Background="#FCFCFB" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App Title -->
        <TextBlock Text="Asset Manager" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Foreground="Black"
                   Margin="0,0,0,20"/>

        <!-- Top Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,20">
            <Button Content="Add Asset" Width="100" Height="30"
                    Click="AddAsset_Click"
                    Background="White" BorderBrush="LightGray" BorderThickness="1"/>

            <Grid Margin="10,0,0,0" Width="200" Height="30">
                <TextBox Name="SearchBox"
                         VerticalAlignment="Center"
                         TextChanged="SearchBox_TextChanged"/>
                <TextBlock Text="Search assets..."
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=SearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Asset Categories List -->
            <ListBox Grid.Column="0" Background="White" BorderBrush="LightGray" BorderThickness="1"
                     Padding="10" Margin="0,0,10,0" IsHitTestVisible="False">
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/animation.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Animations"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/svg.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="SVGs"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/animation.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="PNGs"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/animation.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Images"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/animation.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="GIFs"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>

            <!-- Assets + Preview Section -->
            <Border Grid.Column="2" Background="#FFF0F0F0" Padding="10" CornerRadius="5">
                <Grid Name="AssetsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Name="AssetsListBox"
                             Grid.Row="0"
                             BorderBrush="LightGray"
                             BorderThickness="1"
                             SelectionChanged="AssetsListBox_SelectionChanged"
                             Visibility="Visible"/>

                    <TextBlock Text="No assets to show"
                               Grid.Row="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Gray"
                               FontStyle="Italic"
                               Visibility="{Binding Items.Count, ElementName=AssetsListBox, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}"/>

                    <!-- Preview Panel -->
                    <Grid Name="PreviewGrid" Grid.Row="1" Margin="0,10,0,0">
                        <Image Name="ImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                        <TextBlock Name="SvgPlaceholder" Text="SVG Preview Not Implemented"
                                   Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed" FontStyle="Italic"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>  