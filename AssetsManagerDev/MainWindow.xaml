<Window x:Class="AssetsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:views="clr-namespace:AssetsManagerDev.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Manager" Height="600" Width="900"
        Background="#FCFCFB" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App Title -->
        <views:AppTitleControl Grid.Row="0" />

        <!-- Top Controls -->
        <views:TopControls Grid.Row="1"
                   x:Name="TopControlsPanel"
                   AddAssetClicked="AddAsset_Click"
                   SearchBoxTextChanged="SearchBox_TextChanged"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Asset Categories List -->
            <views:AssetCategoryList SelectedCategoriesChanged="CategoryListControl_SelectedCategoriesChanged" />

            <!-- Assets + Preview Section -->
            <Border Grid.Column="2" Background="#FFF0F0F0" Padding="10" CornerRadius="5">
                <Grid Name="AssetsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Scrollable WrapPanel for assets -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <WrapPanel Name="AssetsWrapPanel" Orientation="Horizontal" ItemWidth="120" ItemHeight="150" />
                    </ScrollViewer>

                    <!-- Preview Panel -->
                    <Grid Name="PreviewGrid" Grid.Row="1" Margin="0,10,0,0">
                        <Image Name="ImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                        <TextBlock Name="SvgPlaceholder" Text="SVG Preview Not Implemented"
                                   Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed" FontStyle="Italic"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
