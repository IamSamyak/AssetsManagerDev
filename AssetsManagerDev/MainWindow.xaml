<Window x:Class="AssetsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:views="clr-namespace:AssetsManagerDev.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Manager" Height="600" Width="900"
        Background="#F4F7FB" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- App Title -->
            <RowDefinition Height="*"/>
            <!-- Rest of the content -->
        </Grid.RowDefinitions>

        <!-- App Title -->
        <views:AppTitleControl Grid.Row="0" />

        <!-- Main Content Area with Background and Rounded Corners -->
        <Border Grid.Row="1" Background="#FEFFFE" CornerRadius="10" Padding="0" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <!-- Thin separator line column -->
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Asset Categories List -->
                <views:AssetCategoryList Grid.Column="0" SelectedCategoriesChanged="CategoryListControl_SelectedCategoriesChanged" />

                <!-- Thin vertical separator line with #F4F7FB -->
                <Border Grid.Column="1" Background="#F4F7FB" />

                <!-- Right side (TopControls on top, then assets and preview) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- TopControls -->
                        <RowDefinition Height="*"/>
                        <!-- Assets + Preview -->
                    </Grid.RowDefinitions>

                    <!-- Top Controls -->
                    <views:TopControls Grid.Row="0"
                               x:Name="TopControlsPanel"
                               VerticalAlignment="Center"
                               AddAssetClicked="AddAsset_Click"
                               SearchBoxTextChanged="SearchBox_TextChanged"/>

                    <!-- Assets + Preview Section -->
                    <Border Grid.Row="1" Background="#FEFFFE" Padding="10" CornerRadius="5" Margin="0,10,0,0">
                        <Grid Name="AssetsGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Scrollable WrapPanel for assets -->
                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                                <WrapPanel Name="AssetsWrapPanel" Orientation="Horizontal" ItemWidth="120" ItemHeight="150" />
                            </ScrollViewer>

                            <!-- Preview Panel -->
                            <Grid Name="PreviewGrid" Grid.Row="1" Margin="0,10,0,0">
                                <Image Name="ImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                                <TextBlock Name="SvgPlaceholder" Text="SVG Preview Not Implemented"
                                           Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="Collapsed" FontStyle="Italic"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
